@page
@model DeleteModel
@{
    ViewData["Title"] = "Patients | Delete";
}

<h1>@ViewData["Title"]</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete patient?</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.OIB)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.OIB)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.MBO)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.MBO)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.FirstName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.FirstName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.LastName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.LastName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.DateOfBirth)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.DateOfBirth)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.Gender)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.Gender)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.Diagnosis)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.Diagnosis)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient!.Insurance)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient!.Insurance)
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Patient!.Id" />
    <input type="submit" value="Delete" class="btn btn-danger form-control mt-3" />
</form>

<a asp-page="/Patients/Index">Back to all patients</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
