<Window x:Class="Lab3.DisplayAdmittedPatients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="Patient Management System - Display Admitted Patients" Height="450" Width="800">
    <Grid Background="DarkSeaGreen">
        <Label Content="Patient Management System" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="365" Margin="0,10,0,0" FontSize="28"/>

        <GroupBox Header="Currently Admitted Patients" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="730">
            <DataGrid x:Name="PatientGrid" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="700"/>
        </GroupBox>

        <StatusBar VerticalAlignment="Bottom" Height="30" Background="Green">
            <StatusBarItem Content="C# Programming - Lab 3 - Anamarija Papić" HorizontalAlignment="Center" FontSize="14"/>
        </StatusBar>
    </Grid>
</Window>
